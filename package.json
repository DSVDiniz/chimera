{
  "name": "chimera",
  "displayName": "Chimera",
  "description": "A compilation of focus-editor, sublime-text and other editors features",
  "version": "1.3.0",
  "publisher": "dsvdiniz",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DSVDiniz/chimera.git"
  },
  "homepage": "https://github.com/DSVDiniz/chimera",
  "bugs": {
    "url": "https://github.com/DSVDiniz/chimera/issues"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Chimera",
      "properties": {
        "chimera.scrollFastLineCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of lines to scroll when using Scroll Up/Down Fast commands"
        },
        "chimera.cycleCasingOrder": {
          "type": "array",
          "default": [
            "camel",
            "pascal",
            "upper",
            "upperSnake",
            "snakePascal",
            "snakeCamel",
            "kebab",
            "upperKebab",
            "lower"
          ],
          "items": {
            "type": "string",
            "enum": [
              "camel",
              "pascal",
              "upper",
              "upperSnake",
              "snake",
              "snakePascal",
              "snakeCamel",
              "kebab",
              "upperKebab",
              "lower"
            ]
          },
          "description": "Order in which to cycle through case types. Available: camel, pascal, upper, upperSnake, snake, snakePascal, snakeCamel, kebab, upperKebab, lower"
        },
        "chimera.wordSeparatorProfiles": {
          "type": "object",
          "default": {
            "Default": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
            "Default + _": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
            "Eclipse-like": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?ABCDEFGHIJKLMNOPQRSTUVWXYZ"
          },
          "description": "Profiles for word separators. Key is the profile name, value is the separator string."
        }
      }
    },
    "commands": [
      {
        "command": "chimera.nextError",
        "title": "Jump to next error"
      },
      {
        "command": "chimera.alignCursors",
        "title": "Align Cursors"
      },
      {
        "command": "chimera.addNumbersToCursors",
        "title": "Adds numbers (counting up) to every cursor"
      },
      {
        "command": "chimera.cycleCasing",
        "title": "Cycles casing (pascal, snake...)"
      },
      {
        "command": "chimera.uniqueLines",
        "title": "Remove Duplicate Lines (Unique)"
      },
      {
        "command": "chimera.reverseLines",
        "title": "Reverse Lines"
      },
      {
        "command": "chimera.shuffleLines",
        "title": "Shuffle Lines"
      },
      {
        "command": "chimera.sortLines",
        "title": "Sort Lines (Case Insensitive)"
      },
      {
        "command": "chimera.sortLinesCaseSensitive",
        "title": "Sort Lines (Case Sensitive)"
      },
      {
        "command": "chimera.splitArguments",
        "title": "Split Arguments"
      },
      {
        "command": "chimera.unsplitArguments",
        "title": "Unsplit Arguments"
      },
      {
        "command": "chimera.scrollUpFast",
        "title": "Scroll Up Fast"
      },
      {
        "command": "chimera.scrollDownFast",
        "title": "Scroll Down Fast"
      },
      {
        "command": "chimera.quoteWords",
        "title": "Quote Words"
      },
      {
        "command": "chimera.switchWordSeparators",
        "title": "Switch Word Separators"
      },
      {
        "command": "chimera.cycleQuotes",
        "title": "Cycle Quotes"
      }
    ],
    "keybindings": [
      {
        "command": "chimera.nextError",
        "key": "ctrl+e",
        "when": "editorTextFocus"
      },
      {
        "command": "chimera.alignCursors",
        "key": "alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "chimera.addNumbersToCursors",
        "key": "alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "chimera.cycleCasing",
        "key": "alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "chimera.scrollUpFast",
        "key": "ctrl+ArrowUp",
        "when": "editorTextFocus"
      },
      {
        "command": "chimera.scrollDownFast",
        "key": "ctrl+ArrowDown",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}